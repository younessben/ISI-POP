<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form id="login-form" class="form" action="<%= localPath %>" method="POST">
    <fieldset>
      <legend>Log In</legend>
      <div class="form-group">
        <label for="username" class="control-label">Username</label>
        <%- contentTag('input', params.username, {type:'text', class:'form-control', name:'username'}) %>
      </div>
      <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <%- contentTag('input', params.password, {type:'password', class:'form-control', name:'password'}) %>
      </div>
      <div class="form-actions">
        <%- contentTag('input', 'Submit', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
    </form>
  </div>
</div>
